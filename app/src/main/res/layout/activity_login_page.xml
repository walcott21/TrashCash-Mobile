<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".LoginPageActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:src="@drawable/logo">

        </ImageView>
        <TextView
            android:id="@+id/Login_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/p_green"
            android:text="Login"
            android:layout_gravity="center"
            android:clickable="false"
            android:textSize="50dp"
            />

        <EditText
            android:id="@+id/email_box"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:background="@color/p_gray"
            android:padding="20dp"
            android:hint="Email"/>

        <EditText
            android:id="@+id/password_box"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:background="@color/p_gray"
            android:padding="20dp"
            android:hint="Password"
            android:inputType="textPassword"
            />
        <Button
            android:id="@+id/login_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:backgroundTint="@color/p_green"
            android:textSize="21sp"
            android:text="Login"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            />
        <TextView
            android:id="@+id/forgot_password_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/p_green"
            android:text="I forgot my password"
            android:layout_gravity="center"
            android:clickable="true"
            android:onClick="iconClicked"
            />
        <TextView
            android:id="@+id/register_now_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/p_green"
            android:text="New user? Register now:"
            android:layout_gravity="center"
            android:layout_marginVertical="30dp"
            android:clickable="false"
            />
        <Button
            android:id="@+id/Register_button"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:backgroundTint="@color/p_green"
            android:textSize="15sp"
            android:text="Register"
            />
        <TextView
            android:id="@+id/sign_up_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/p_green"
            android:text="Sign up with:"
            android:layout_gravity="center"
            android:layout_marginVertical="30dp"
            android:clickable="false"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <ImageView
                android:id="@+id/fb_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/facebook"
                android:layout_marginHorizontal="10dp"
                android:clickable="true"
                android:onClick="iconClicked">
            </ImageView>
            <ImageView
                android:id="@+id/google_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/fb_login"
                android:layout_gravity="center"
                android:src="@drawable/google"
                android:layout_marginHorizontal="10dp"
                android:clickable="true"
                android:onClick="iconClicked">
            </ImageView>
            <ImageView
                android:id="@+id/apple_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/google_login"
                android:layout_gravity="center"
                android:src="@drawable/apple"
                android:layout_marginHorizontal="10dp"
                android:clickable="true"
                android:onClick="iconClicked">
            </ImageView>

        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>
